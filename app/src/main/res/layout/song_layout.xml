<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/cardView">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimaryLight">

            <ImageView
                android:id="@+id/song_cover"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@color/colorPrimary"
                android:scaleType="centerCrop"
                android:src="@drawable/a1" />

            <TextView
                android:id="@+id/song_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/song_duration"
                android:layout_toEndOf="@+id/song_options"
                android:layout_toLeftOf="@+id/song_play_button"
                android:layout_toRightOf="@+id/song_options"
                android:layout_toStartOf="@+id/song_play_button"
                android:text="song_name"
                android:textColor="@color/colorAccent"
                android:textSize="16sp" />

            <ImageButton
                android:id="@+id/song_play_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:background="@color/transparent"
                android:src="@drawable/ic_play_arrow_black_24dp" />

            <TextView
                android:id="@+id/song_duration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/song_cover"
                android:layout_toEndOf="@+id/song_options"
                android:layout_toLeftOf="@+id/song_play_button"
                android:layout_toRightOf="@+id/song_options"
                android:layout_toStartOf="@+id/song_play_button"
                android:text="12:23/12:44"
                android:textColor="@color/colorAccent"
                android:textSize="16sp" />
            <ImageButton
                android:id="@+id/song_options"
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@color/transparent"
                android:src="@drawable/ic_more_vert_black_24dp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>